@model Shampan.Models.Advances

@{
    ViewData["Title"] = "Index";
    ////var message = ViewBag.SuccessMsg;
}

@Html.Partial("_Header",new HeaderModel(){ HeaderName = "Advances", BreadCrums = new Dictionary<string, string>()
{
    {"/Advances","Index"},
    {"","Index"},
}})

<link href="~/css/button.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="card">
        <div class="card-header p-2">
            <button type="button" title="Add New BankEntry"
                    data-url="/Advances/Create" onclick="GoTo(this)"
                    id="" class="button NewButton addNewButton">
                New
            </button>

            <button type="button" title=""
                    id="PostAD" class="button sslPost">

                Post
            </button>


        </div>
    </div>





    <div class="card card-secondary">
        <div class="card-header">
            <h3 class="card-title">
                List Of Data
            </h3>

        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered table-striped" style="width:100%" id="AdvancesList">
                    <thead>
                        <tr>

                            @*<th class="action">&nbsp;Action</th>*@
                            <th class="action"><input type="checkbox" class="chkAll" />&nbsp;Action</th>

                            <th>Code</th>
                            <th>Advance Amount</th>
                            <th>Description</th>
                            <th class="bool">Post</th>


                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>

@section scripts{

    <script src="/js/app/Services/CommonService.js"></script>


    <script src="/js/app/Services/AdvancesService.js"></script>
    <script src="/js/app/Controllers/AdvancesController.js"></script>

    <script>

        $(document).ready(function () {

            AdvancesController.init();


        });

    </script>
    }

