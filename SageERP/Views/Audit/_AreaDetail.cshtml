@model Shampan.Models.AuditModule.AuditAreas


<div class="modal-dialog draggable modal-lg" role="document" style="max-width:70%;">
	<div class="modal-content" style="width:100%;">
		<div class="modal-header">
			<h4 class="modal-title">Area Detail</h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		</div>
		<div class="modal-body">

			<form id="AuditAreas">

				@Html.HiddenFor(model => model.Id, new {@Id = "AreaId"})
				@Html.HiddenFor(model => model.AuditId)
				@Html.HiddenFor(model => model.Operation, new {@Id = "AreaOperation"})

				<div class="row form-group">

					<div class="col-sm-6">
						@Html.Label("Audit Area")
						@Html.TextBoxFor(model => model.AuditArea, new {@class = "  form-control input-sm"})
					</div>
				</div>


				<div class="row">
					<div class="col-sm-12">
						@Html.Label("Area Details")

						@Html.TextBoxFor(model => model.AreaDetails, new {@class = "  form-control input-sm", @data_ck = "true"})
					</div>
				</div>

			</form>






